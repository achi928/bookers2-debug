<h1>Books search </h1>
<table>
  <% if @model == "Book" %>
    <tr>
      <th><th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @search.each do |book| %>
      <tr>
        <td>
          <%= image_tag book.user.get_profile_image, size: '50x50' %>
        </td>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>   
      </tr>
    <% end %>
  <% elsif @model == "User" %>
    <tr>
      <th><th>
      <th>Name</th>
      <th>Introduction</th>
    </tr>
    <% @search.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image, size: '50x50' %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= user.introduction %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>